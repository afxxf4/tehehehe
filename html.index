<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Happy Birthday My Kuchikuchikuuu</title>
  <style>
    body {
      margin: 0;
      background-color: #d9a58f; /* same soft background */
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      font-family: "Cursive", sans-serif;
      overflow: hidden;
    }

    .scene {
      display: none;
      text-align: center;
      color: #fff8f0;
      font-size: 2rem;
      opacity: 0;
      transition: opacity 1s ease;
    }

    .scene.active {
      display: block;
    }

    .scene.fade-in {
      opacity: 1;
    }

    .blink {
      font-size: 1rem;
      color: #f8e1d1;
      animation: blink 1s infinite;
      margin-top: 10px;
    }

    @keyframes blink {
      0%, 50%, 100% { opacity: 1; }
      25%, 75% { opacity: 0; }
    }

    /* Cake */
    .cake {
      position: relative;
      width: 200px;
      height: 120px;
      margin: 0 auto;
      background: #6b3e2e;
      border-radius: 10px;
      box-shadow: inset -5px -5px 0 #5a3225;
    }

    .icing {
      position: absolute;
      top: 0;
      width: 100%;
      height: 40px;
      background: #f5d6c6;
      border-radius: 10px 10px 0 0;
    }

    .candle {
      position: absolute;
      bottom: 100%;
      width: 8px;
      height: 30px;
      background: #fff;
      left: 50%;
      transform: translateX(-50%);
    }

    .candle:nth-child(1) { left: 30px; }
    .candle:nth-child(2) { left: 70px; }
    .candle:nth-child(3) { left: 110px; }
    .candle:nth-child(4) { left: 150px; }
    .candle:nth-child(5) { left: 90px; }

    .flame {
      position: absolute;
      top: -15px;
      left: 50%;
      width: 12px;
      height: 20px;
      background: radial-gradient(circle, #ffdb58, #ff8c00);
      border-radius: 50%;
      transform: translateX(-50%);
      animation: flicker 0.2s infinite alternate;
    }

    @keyframes flicker {
      from { transform: translateX(-50%) scale(1); opacity: 0.9; }
      to { transform: translateX(-50%) scale(1.1); opacity: 1; }
    }

    /* Balloons */
    .balloon {
      position: absolute;
      bottom: -150px;
      width: 60px;
      height: 80px;
      border-radius: 50% 50% 45% 55%;
      background: #c58c5d;
      animation: float 6s linear infinite;
    }

    .balloon::after {
      content: "";
      position: absolute;
      width: 2px;
      height: 40px;
      background: #333;
      top: 80px;
      left: 50%;
      transform: translateX(-50%);
    }

    @keyframes float {
      0% { transform: translateY(0) scale(1); opacity: 1; }
      100% { transform: translateY(-110vh) scale(1.1); opacity: 0; }
    }
  </style>
</head>
<body>
  <div class="scene scene1 active">
    <div>Happy Birthday my kuchikuchikuuu &lt;3</div>
    <div class="blink">tap on the screen</div>
  </div>

  <div class="scene scene2">
    <div>Here is a cake for all the years you havenâ€™t had your own cake :33</div>
    <div class="blink">tap on the screen</div>
  </div>

  <div class="scene scene3">
    <div class="cake">
      <div class="icing"></div>
      <div class="candle"><div class="flame"></div></div>
      <div class="candle"><div class="flame"></div></div>
      <div class="candle"><div class="flame"></div></div>
      <div class="candle"><div class="flame"></div></div>
      <div class="candle"><div class="flame"></div></div>
    </div>
    <div class="blink">tap on the screen</div>
  </div>

  <div class="scene scene4"></div>

  <script>
    const scenes = document.querySelectorAll('.scene');
    let current = 0;

    function showScene(index) {
      scenes.forEach(s => { s.classList.remove('active', 'fade-in'); });
      scenes[index].classList.add('active');
      setTimeout(() => scenes[index].classList.add('fade-in'), 50);
    }

    function blowCandles() {
      document.querySelectorAll('.flame').forEach(f => f.style.display = 'none');
      setTimeout(releaseBalloons, 1000);
    }

    function releaseBalloons() {
      const scene4 = document.querySelector('.scene4');
      for (let i = 0; i < 19; i++) {
        const b = document.createElement('div');
        b.classList.add('balloon');
        b.style.left = Math.random() * 90 + "vw";
        b.style.background = ["#c58c5d", "#a47148", "#8b5e34", "#6b4226", "#e6ccb2"][i % 5];
        b.style.animationDuration = (4 + Math.random() * 2) + "s";
        scene4.appendChild(b);
      }
      showScene(3); // keep scene3 visible while balloons float
    }

    document.body.addEventListener('click', () => {
      if (current === 2) {
        blowCandles();
        current++;
        return;
      }
      if (current < scenes.length - 1) {
        current++;
        showScene(current);
      }
    });

    showScene(0);
  </script>
</body>
</html>
